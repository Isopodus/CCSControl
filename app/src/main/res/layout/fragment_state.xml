<?xml version="1.0" encoding="utf-8"?>


    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="@drawable/background"
                     tools:context=".StateFragment"
                     android:tag="stateFragment">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@drawable/rectangle_background"
                    android:layout_margin="15dp" android:padding="10dp">
                <Spinner
                        android:id="@+id/spinner"
                        app:popupTheme="@style/AppTheme.PopupOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:popupBackground="@drawable/rounded_rectangle"
                        android:gravity="top|center"
                        android:background="@drawable/rounded_rectangle"
                        android:layout_marginTop="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                        android:minHeight="65dp"/>
                <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:visibility="visible"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:background="@drawable/rounded_rectangle"
                            android:padding="7dp"
                            android:layout_weight="1" android:layout_margin="10dp"
                            android:gravity="center_vertical|center_horizontal">
                        <ImageView
                                android:src="@drawable/cup"
                                android:layout_width="50dp"
                                android:layout_height="50dp" android:id="@+id/imageView5" android:layout_weight="1"
                                android:layout_marginEnd="2dp"/>
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/portionsCount" android:textSize="28sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorCup" android:text="0"
                                android:textAlignment="center" android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:background="@drawable/rounded_rectangle"
                            android:padding="7dp"
                            android:layout_weight="1" android:layout_margin="10dp"
                            android:gravity="center_vertical|center_horizontal">
                        <ImageView
                                android:src="@drawable/water"
                                android:layout_width="50dp"
                                android:layout_height="50dp" android:id="@+id/imageView8" android:layout_weight="1"
                                android:layout_marginEnd="2dp"/>
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/straitsCount" android:textSize="28sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorWater" android:text="0"
                                android:textAlignment="center" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="wrap_content" android:layout_width="match_parent"
                            android:gravity="center" android:layout_marginBottom="7dp" android:background="@color/colorCup"
                            android:layout_weight="1" android:padding="4dp">
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/textView1" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="@string/state_sync"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/syncTime" android:textSize="13sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="01.01.2019 00:00:00"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <ImageView
                                android:src="@drawable/sync"
                                android:layout_width="35dp"
                                android:layout_height="35dp" android:id="@+id/imageView10" android:layout_weight="1"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center"
                            android:layout_marginBottom="7dp" android:background="@color/colorCup" android:layout_weight="1"
                            android:padding="4dp">
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="@string/state_start"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/startupTime" android:textSize="13sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="01.01.2019 00:00:00"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <ImageView
                                android:src="@drawable/start"
                                android:layout_width="35dp"
                                android:layout_height="35dp" android:id="@+id/imageView11" android:layout_weight="1"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="wrap_content" android:layout_width="match_parent"
                            android:gravity="center" android:layout_marginBottom="7dp" android:background="@color/colorCup"
                            android:layout_weight="1" android:padding="4dp">
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="@string/state_server"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/serverState" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="@string/state_server_err"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <ImageView
                                android:src="@drawable/status_no"
                                android:layout_width="35dp"
                                android:layout_height="35dp" android:id="@+id/statusImage" android:layout_weight="1"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="wrap_content" android:layout_width="match_parent"
                            android:gravity="center" android:layout_marginBottom="7dp" android:background="@color/colorCup"
                            android:layout_weight="1" android:padding="4dp">
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="@string/state_sd"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/memoryState" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="@string/state_server_err"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <ImageView
                                android:src="@drawable/sd"
                                android:layout_width="35dp"
                                android:layout_height="35dp" android:id="@+id/imageView13" android:layout_weight="1"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="wrap_content" android:layout_width="match_parent"
                            android:gravity="center" android:layout_marginBottom="7dp" android:background="@color/colorCup"
                            android:layout_weight="1" android:padding="4dp">
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/textView5" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="@string/state_temp"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/temp" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="70C"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <ImageView
                                android:src="@drawable/temp"
                                android:layout_width="35dp"
                                android:layout_height="35dp" android:id="@+id/imageView14" android:layout_weight="1"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="wrap_content" android:layout_width="match_parent"
                            android:gravity="center" android:layout_marginBottom="7dp" android:background="@color/colorCup"
                            android:layout_weight="1" android:padding="4dp">
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="@string/state_humid"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content" android:id="@+id/humid" android:textSize="19sp"
                                android:fontFamily="@font/flipbash" android:textColor="@color/colorLight1"
                                android:text="13%"
                                android:textAlignment="center" android:layout_weight="1"/>
                        <ImageView
                                android:src="@drawable/hum"
                                android:layout_width="35dp"
                                android:layout_height="35dp" android:id="@+id/imageView15" android:layout_weight="1"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>