<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background"
             tools:context=".StateFragment"
             android:tag="stateFragment">


    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/rectangle_background"
            android:gravity="top|center">
        <Spinner xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools" android:id="@+id/spinner"
                 app:popupTheme="@style/AppTheme.PopupOverlay"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:popupBackground="@drawable/rounded_rectangle"
                 android:gravity="top|center"
                 android:background="@drawable/rounded_rectangle" android:layout_marginBottom="10dp"
                 android:layout_marginTop="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
        />

        <TableRow android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_gravity="top|center">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:background="@drawable/rounded_rectangle"
                    android:padding="7dp"
                    android:layout_weight="1" android:layout_margin="10dp">
                <ImageView
                        android:src="@drawable/cup"
                        android:layout_width="50dp"
                        android:layout_height="50dp" android:id="@+id/imageView5" android:layout_weight="1"
                        android:layout_marginEnd="2dp"/>
                <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content" android:id="@+id/portionsCount" android:textSize="28sp"
                        android:fontFamily="@font/flipbash" android:textColor="@color/colorCup" android:text="000"
                        android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:background="@drawable/rounded_rectangle"
                    android:padding="7dp"
                    android:layout_weight="1" android:layout_margin="10dp">
                <ImageView
                        android:src="@drawable/water"
                        android:layout_width="50dp"
                        android:layout_height="50dp" android:id="@+id/imageView8" android:layout_weight="1"
                        android:layout_marginEnd="2dp"/>
                <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content" android:id="@+id/straitsCount" android:textSize="28sp"
                        android:fontFamily="@font/flipbash" android:textColor="@color/colorWater" android:text="000"
                        android:textAlignment="center"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</FrameLayout>